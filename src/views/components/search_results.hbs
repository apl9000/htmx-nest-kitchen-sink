{{#if results}}
  <table id='search-results'>
    <thead>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
    </thead>
    <tbody class='overflow-scroll max-h-96'>
      {{#each results}}
        <tr
          hx-get='results/{{email}}'
          hx-target='#result'
          class='border p-4 cursor-pointer'
        >
          <td>{{id}}</td>
          <td>{{first_name}} {{last_name}}</td>
          <td>{{email}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class='p-4'>No results found</div>
{{/if}}